{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["es6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["packages", "examples", "scripts"],
  "exclude": [
    "node_modules"
  ]
}
