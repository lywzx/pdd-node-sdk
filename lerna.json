{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/src/**",
        "**/test/**",
        "**/tsconfig.json"
      ],
      "allowBranch": [
        "master",
        "v2"
      ],
      "registry": "http://registry.npmjs.org"
    }
  },
  "version": "0.0.1-alpha.0",
  "useWorkspaces": true,
  "npmClient": "yarn"
}
